<script>
    function openEditModal(button) {
        var testDriveId = button.getAttribute('data-testdrive-id');
        var dealerId = button.getAttribute('data-dealer-id');
        var vehicleId = button.getAttribute('data-vehicle-id');
        var date = button.getAttribute('data-date');
        var time = button.getAttribute('data-time');
        var note = button.getAttribute('data-note') || '';

        document.getElementById('editTestDriveId').value = testDriveId;
        document.getElementById('editDealerId').value = dealerId;
        document.getElementById('editVehicleId').value = vehicleId;
        document.getElementById('editDate').value = date;
        document.getElementById('editTime').value = time;
        document.getElementById('editNote').value = note;

        document.getElementById('editModal').style.display = 'flex';
    }

    function loadSlots() {
        var date = document.getElementById('slotDate').value;
        var dealerId = document.getElementById('slotDealer').value;
        
        if (!date || !dealerId) {
            alert('Vui l√≤ng ch·ªçn ng√†y v√† ƒë·∫°i l√Ω');
            return;
        }
        
        window.location.href = '?date=' + date + '&dealerId=' + dealerId;
    }

    function openBookSlotModal(slotId, startTime, endTime, vehicles) {
        document.getElementById('bookSlotId').value = slotId;
        document.getElementById('bookSlotTimeDisplay').textContent = startTime + ' - ' + endTime;
        
        var vehicleSelect = document.getElementById('bookSlotVehicle');
        vehicleSelect.innerHTML = '<option value="">-- Ch·ªçn xe --</option>';
        
        vehicles.forEach(function(vehicle) {
            var option = document.createElement('option');
            option.value = vehicle.id;
            option.textContent = vehicle.name;
            vehicleSelect.appendChild(option);
        });
        
        document.getElementById('bookSlotModal').style.display = 'flex';
    }

    // Close modal when clicking outside
    window.onclick = function(event) {
        var bookModal = document.getElementById('bookModal');
        var editModal = document.getElementById('editModal');
        var slotBrowserModal = document.getElementById('slotBrowserModal');
        var bookSlotModal = document.getElementById('bookSlotModal');
        
        if (event.target == bookModal) {
            bookModal.style.display = 'none';
        }
        if (event.target == editModal) {
            editModal.style.display = 'none';
        }
        if (event.target == slotBrowserModal) {
            slotBrowserModal.style.display = 'none';
        }
        if (event.target == bookSlotModal) {
            bookSlotModal.style.display = 'none';
        }
    }

    // Auto-open modal if there's an error
    @if (TempData["KeepModalOpen"] != null)
    {
        <text>
        window.onload = function() {
            document.getElementById('bookModal').style.display = 'flex';
        };
        </text>
    }
</script>

